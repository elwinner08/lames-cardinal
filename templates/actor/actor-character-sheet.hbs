          <label class="resource-label rollable flexlarge align-left" data-roll="d20+@carac.puissant.mod"
            data-label="Puissant">Puissant</label>
          <input type="text" name="system.carac.puissant.value" value="system.carac.puissant.value"
            data-dtype="Number" />
        </div>

        {{!--colonne 2 : Vif--}}
        <div class="resource flexrow flex-group-center">
          <label class="resource-label rollable flexlarge align-left" data-roll="d20+@carac.vif.mod"
            {{!--/*data-label="{{carac.label}}" --}}>{{localize CONFIG.LAMES_CARDINAL.carac.vif}}</label>
          <input type="text" name="system.carac.vif.value" value="system.carac.vif.value" data-dtype="Number" />
        </div>

        {{!--colonne 3 : Galant--}}
        <div class="resource flexrow flex-group-center">
          <label class="resource-label rollable flexlarge align-left" data-roll="d20+@carac.galant.mod"
            {{!--/*data-label="{{carac.label}}" --}}>{{localize CONFIG.LAMES_CARDINAL.carac.galant}}</label>
          <input type="text" name="system.carac.galant.value" value="system.carac.galant.value" data-dtype="Number" />
        </div>

        {{!--colonne 4 : Fin--}}
