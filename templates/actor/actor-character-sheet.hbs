          <label class="resource-label rollable flexlarge align-left" data-roll="d20+@carac.fin.mod"
            {{!--/*data-label="{{carac.label}}" --}}>{{localize CONFIG.LAMES_CARDINAL.carac.fin}}</label>
          <input type="text" name="system.carac.fin.value" value="system.carac.fin.value" data-dtype="Number" />
        </div>

